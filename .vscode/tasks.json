{
    "tasks": [
        {
            "type": "shell",
            "label": "cc build active file",
            "command": "/usr/bin/cc",
            "args": [
				"-g",
				"-L${fileDirname}/libft",
				"-lft",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${fileDirname}/*.c"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}